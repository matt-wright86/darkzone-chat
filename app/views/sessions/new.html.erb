<div class="page-header">
  <h1>Darkzone <small>messngr updates (sign in)</small></h1>
</div>

<div class="col-md-6 col-md-offset-3">
    <%= form_tag do %>

      <div class="form-group">
        <%= label_tag :email %>
         <%= text_field_tag :email,"", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password,"", class: "form-control" %>
      </div>

       <div class="form-group text-center">
         <%= submit_tag "Sign In", class: "btn btn-primary" %> | <%= link_to "Sign Up", sign_up_path , class: "btn btn-info"%>
      </div>

    <% end %>
</div>
